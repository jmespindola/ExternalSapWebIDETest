<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="capu.controller.ColorDetail">
<Page title="Page" id="__page1" showNavButton="true" navButtonPress="onNavBack">
    <content>
        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" title="Color Detail" id="colorform">
            <sap.ui.layout.form:content>
                <core:Title text="Color Detail" id="__title1"/>
                <Label text="Code" id="__label2"/>
                <Input width="100%" id="txtCode" value="{apparelmodels>Code}" valueLiveUpdate="true"/>
                <Label text="Color Code" id="__label3"/>
                <Input width="100%" id="__input5" value="{apparelmodels>U_ColCode}"/>
                <Label xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:sap.ui.layout.form="sap.ui.layout.form" text="Color Description" id="__label3_copy"/>
                <Input xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:sap.ui.layout.form="sap.ui.layout.form" width="100%" id="txtDesc" value="{apparelmodels>U_ColDesc}" valueLiveUpdate="true"/></sap.ui.layout.form:content>
        </sap.ui.layout.form:SimpleForm>
    </content>
<footer>
    <Toolbar width="100%" id="__toolbar1">
        <content>
            <Button text="Ok" width="100px" id="__button0" icon="sap-icon://accept" press="onSaveColor"/>
            <Button text="Cancel" width="100px" id="__button1" icon="sap-icon://cancel"/>
        </content>
    </Toolbar>
</footer>
</Page>
</mvc:View>